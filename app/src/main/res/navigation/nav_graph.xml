<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/cityFragment"
        android:name="com.example.weatherapp.base.CityFragment"
        android:label="fragment_change"
        tools:layout="@layout/fragment_base">
        <action
            android:id="@+id/action_cityFragment_to_weatherFragment"
            app:destination="@id/weatherFragment">
            <argument android:name="cityName"
                app:argType="string"
                app:nullable="false"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.weatherapp.ui.fragments.WeatherFragment"
        android:label="fragment_weather"
        tools:layout="@layout/fragment_weather">
        <argument android:name="cityName"
            app:argType="string"
            app:nullable="false"
            android:defaultValue="Bishkek"
            />

    </fragment>
</navigation>